{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "cypress",
      "vite/client"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}