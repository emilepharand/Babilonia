{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true,
    // Access macros such as `defineEmits`
    "vue/setup-compiler-macros": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-essential",
    "xo",
    "xo-typescript",
    "@vue/eslint-config-typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "@typescript-eslint"
  ],
  "rules": {
    "padding-line-between-statements": "off",
    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": ["error"]
  },
  "ignorePatterns": ["**/dist/*"]
}
