{
  "name": "babilonia-express-vuejs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf .nyc_output_* tests/coverage dist/css dist/img dist/js dist/*.ico dist/*.html dist/*.cjs",
    "build": "npm run clean && npm run build:vue && npm run build:api",
    "build:vue": "vue-cli-service build --no-clean",
    "build:api": "webpack ./server/index.ts",
    "dev": "run-p dev:serve:api dev:serve:vue",
    "dev:serve:api": "nodemon server/index.ts --dev-mode",
    "dev:serve:vue": "export $(xargs < .env) && vue-cli-service serve --port $BASE_PORT",
    "pretest": "npm run test:build",
    "test:build": "export $(xargs < .env.test) && npm run build",
    "test": "npm run test:api && npm run test:vue && npm run test:coverage",
    "test:api": "export $(xargs < .env.test) && start-server-and-test test:serve http://localhost:$BASE_PORT test:api:run && npm run test:api:coverage",
    "test:api:run": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:api:coverage": "cd tests/coverage && mkdir merged && cp jest/coverage-final.json merged/coverage-jest.json && cp nyc/coverage-final.json merged/coverage-nyc.json",
    "test:vue": "export $(xargs < .env.test) && start-server-and-test test:serve http://localhost:$BASE_PORT test:vue:run && npm run test:vue:coverage",
    "test:serve": "cd dist && nyc --report-dir=tests/coverage/nyc --temp-dir=.nyc_output_app node index.cjs --test-mode",
    "test:vue:run": "cypress run",
    "test:vue:coverage": "cd tests/coverage && cp cypress/coverage-final.json merged/coverage-cypress.json",
    "test:coverage": "nyc report -t tests/coverage/merged --report-dir tests/coverage/merged --reporter=html && rm -rf .nyc_output_*"
  },
  "dependencies": {
    "@cypress/webpack-preprocessor": "^5.12.2",
    "@types/express": "^4.17.14",
    "@types/sqlite3": "^3.1.8",
    "ajv": "^8.11.0",
    "bootstrap": "^5.2.1",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "node-fetch": "^3.2.10",
    "path-browserify": "^1.0.1",
    "run-p": "^0.0.0",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.1",
    "ts-loader": "^9.4.1",
    "vue": "^3.2.39",
    "vue-router": "^4.1.5",
    "webpack": "^5.74.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/bootstrap": "^5.2.4",
    "@types/cors": "^2.8.12",
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vue/cli-plugin-babel": "~5.0.8",
    "@vue/cli-plugin-e2e-cypress": "~5.0.8",
    "@vue/cli-plugin-eslint": "~5.0.8",
    "@vue/cli-plugin-router": "~5.0.8",
    "@vue/cli-plugin-typescript": "~5.0.8",
    "@vue/cli-service": "~5.0.8",
    "@vue/compiler-sfc": "^3.2.39",
    "@vue/eslint-config-airbnb": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.0.2",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-preset-minify": "^0.5.2",
    "cypress": "^10.8.0",
    "cypress-fail-on-console-error": "^3.3.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-vue": "^9.5.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.3.2",
    "npm-run-all": "^4.1.5",
    "serve": "^14.0.1",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "typescript-json-validator": "^2.4.2",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "nyc": {
    "cache": false,
    "report-dir": "tests/coverage/cypress",
    "temp-dir": ".nyc_output_cypress",
    "exclude": [
      "**/*.vue",
      "**/*.js"
    ],
    "excludeAfterRemap": true,
    "reporter": [
      "json"
    ]
  }
}
